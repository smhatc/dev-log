<article class="posts-grid">
    <% foundPosts.forEach(post => { %>
        <div class="posts-grid-item">
            <figure class="posts-grid-item-figure">
                <img src="<%= post.image.url %>" alt="Banner for <%= post.title %>" class="posts-grid-item-figure-image">
            </figure>
            <h2 class="posts-grid-item-heading"><%= post.title %></h2>
            <p class="posts-grid-item-authordate">By <%= post.author %> | <%= post.updatedAt %></p>
            <p class="posts-grid-item-excerpt"><%= post.excerpt %></p>
            <% if (user) { %>
                <div class="posts-grid-item-editdel">
                    <a class="posts-grid-item-editdel-editlink" href="/<%= post._id %>/edit">Edit</a>
                    <form class="posts-grid-item-editdel-delform" action="/<%= post._id %>?_method=DELETE" method="post">
                        <button class="posts-grid-item-editdel-delbtn" type="submit">Delete</button>
                    </form>
                </div>
            <% } %>
            <a href="/<%= post._id %>" class="posts-grid-item-link">Read More <img src="/public/assets/images/read-post-arrow.png" alt="Arrow Icon" class="posts-grid-item-link-arrow"></a>
        </div>
    <% }); %>
</article>